@model IHaveStatistics
@{
    var goalkeeping = Model.GetTypeOfShortProperties(nameof(IHaveStatistics.Goalkeeping));
    var defence = Model.GetTypeOfShortProperties(nameof(IHaveStatistics.Defence));
    var attack = Model.GetTypeOfShortProperties(nameof(IHaveStatistics.Attack));
    var teamPlay = Model.GetTypeOfShortProperties(nameof(IHaveStatistics.TeamPlay));
    var discipline = Model.GetTypeOfShortProperties(nameof(IHaveStatistics.Discipline));
    var match = Model.GetTypeOfShortProperties(nameof(IHaveStatistics.Match));
}
<div>
    <div class="row">
        <div class="col-5" style="background-color: #ffffff;filter: drop-shadow(10px 10px 12px #38003c)">
            @if(goalkeeping.Count != 0)
            {
                <div class="row" style="background-color: #38003c; color: #ffffff; font-size: 1vw;"><strong>&nbsp; Goalkeeping</strong></div>
                @foreach (var property in goalkeeping)
                 {
                     <div class="row  infoRow">
                         <div class="col-8 text-left animated bounceInUp" style="font-size: 1vw;">
                             @property.Name.ToNoFirstWord().ToSentenceCase()
                         </div>
                         <div class="col-4 text-right animated bounceInUp" style="font-size: 1vw;">
                             @property.GetValue(Model)
                         </div>
                     </div>
                 }
            }
            @if (goalkeeping.Count == 0)
            {
                <div class="row" style="background-color: #38003c; color: #ffffff;font-size: 1vw;"><strong>&nbsp; Attack</strong></div>
            }
            @foreach (var property in attack)   
            {
                <div class="row  infoRow" >
                    <div class="col-8 text-left animated bounceInUp" style="font-size: 1vw;">
                        @property.Name.ToNoFirstWord().ToSentenceCase()
                    </div>
                    <div class="col-4 text-right animated bounceInUp" style="font-size: 1vw;">
                        @property.GetValue(Model)
                    </div>
                </div>
            }
            <br/>
            <div class="row" style="background-color: #04f5ff; color: #38003c; font-size: 1vw;"><strong>&nbsp; Defence</strong></div>
            @foreach (var property in defence)
            {
                <div class="row infoRow">
                    <div class="col-8 text-left animated bounceInUp" style="font-size: 1vw;">
                        @property.Name.ToNoFirstWord().ToSentenceCase()
                    </div>
                    <div class="col-4 text-right animated bounceInUp" style="font-size: 1vw;">
                        @property.GetValue(Model)
                    </div>
                </div>
            }
            <br />
        </div>
        <div class="col-2">
            @*<div class="row">
                @await Component.InvokeAsync("Gameweeks")
            </div>*@
        </div>
        <div class="col-5" style="background-color: #ffffff;filter: drop-shadow(10px 10px 12px #38003c)">
            <div class="row" style="background-color: #00ff85; color: #38003c;font-size: 1vw;"> <strong>&nbsp; Team Play</strong></div>
            @foreach (var property in teamPlay)
            {
                <div class="row animated  infoRow">
                    <div class="col-8 text-left animated bounceInUp" style="font-size: 1vw;">
                        @property.Name.ToNoFirstWord().ToNoFirstWord().ToSentenceCase()
                    </div>
                    <div class="col-4 text-right animated bounceInUp" style="font-size: 1vw;">
                        @property.GetValue(Model)
                    </div>
                </div>
            }
            <br />
            <div class="row" style="background-color: #e90052; color: #ffffff; font-size: 1vw;"><strong>&nbsp; Discipline</strong></div>
            @foreach (var property in discipline)
            {
                <div class="row infoRow">
                    <div class="col-8 text-left animated bounceInUp" style="font-size: 1vw;">
                        @property.Name.ToNoFirstWord().ToSentenceCase()
                    </div>
                    <div class="col-4 text-right animated bounceInUp" style="font-size: 1vw;">
                        @property.GetValue(Model)
                    </div>
                </div>
            }
            <br />
            <div class="row" style="background-color: #ffff00; color: #38003c;font-size: 1vw;"><strong>&nbsp; Overall</strong></div>
            @foreach (var property in match)
            {
                <div class="row infoRow">
                    <div class="col-8 text-left animated bounceInUp" style="font-size: 1vw;">
                        <strong>@property.Name.ToNoFirstWord().ToSentenceCase()</strong>
                    </div>
                    <div class="col-4 text-right animated bounceInUp" style="font-size: 1vw;">
                        <strong>@property.GetValue(Model)</strong>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<style rel="stylesheet">
    .infoRow {
        border-bottom: #38003c 1px solid;
        margin-top: 10px;
    }
</style>