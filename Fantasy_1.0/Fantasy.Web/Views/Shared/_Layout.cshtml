<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fantasy.Web</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/animate.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/animate.css" />
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/fontawesome.min.js"></script>
    <script src="~/js/fontawesome.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.js" charset="utf-8"></script>


    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm " style="background-color: #38003c;">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole(AdministratorRole))
                        {
                            <li>
                                <a class="nav-link text-white" asp-area="Administrator" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                            </li>
                           
                        }
                        <li>
                            <a class="nav-link text-white" asp-area="Administrator" asp-controller="Test" asp-action="Test">SandBox</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li style="margin-left: 30px;">
                            <a class="nav-link text-white" asp-area="" asp-controller="Players" asp-action="Index">Players</a>
                        </li>
                        <li style="margin-left: 10px;">
                            <a class="nav-link text-white" asp-area="" asp-controller="Fixtures" asp-action="Index">Fixtures</a>
                        </li>
                        <li style="margin-left: 10px;">
                            <a class="nav-link text-white" asp-area="" asp-controller="Squad" asp-action="Index">My Squad</a>
                        </li>
                        <li style="margin-left: 10px;">
                            <a class="nav-link text-white" asp-area="" asp-controller="Squad" asp-action="GameweekHistory">Season History</a>
                        </li>
                        <li style="margin-left: 10px;">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Rules">Point System</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @if (this.TempData.ContainsKey(TempDataSuccessMessageKey))
            {
                <h2 class="text-success animated 1 bounce text-center">
                    @this.TempData[TempDataSuccessMessageKey]
                </h2>
            }
            @if (this.TempData.ContainsKey(TempDataErrorMessageKey))
            {
                <h2 class="text-danger animated 1 bounce text-center">
                    @this.TempData[TempDataErrorMessageKey]
                </h2>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: #38003c">
        <div class="container">
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
