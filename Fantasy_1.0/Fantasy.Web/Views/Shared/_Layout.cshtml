@using Fantasy.Web.Infrastructure
@{
    var isAdmin = User.IsInRole(GlobalConstants.AdministratorRole);
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fantasy.Web</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/animate.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/animate.css" />
    <script src="~/js/jquery-3.4.1.min.js"></script>
    @*<script src="~/js/popper.min.js"></script>*@
    <script src="~/js/bootstrap.min.js"></script>
    @*<script src="~/js/jquery.datetimepicker.full.min.js"></script>*@
    <script src="~/js/fontawesome.min.js"></script>
    <script src="https://riversun.github.io/jsframe/jsframe.js"></script>


    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav  class="navbar navbar-expand-sm "style="background-color: #38003c;">
            <div class="container-fluid ">
                
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (isAdmin)
                        {
                            <li>
                                @*<a class=" btn btn-dark nav-link text-white" asp-area="Administrator" asp-controller="Players" asp-action="All">Players</a>*@
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="Administrator" asp-controller="Gameweeks" asp-action="Index" target="_blank">Admin Panel</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @if (this.TempData.ContainsKey(GlobalConstants.TempDataSuccessMessageKey))
            {
                <h1 class="text-success animated 1 bounce text-center">
                    @this.TempData[GlobalConstants.TempDataSuccessMessageKey]
                </h1>
            }
            @if (this.TempData.ContainsKey(GlobalConstants.TempDataErrorMessageKey))
            {
                <h1 class="text-danger animated 1 bounce text-center">
                    @this.TempData[GlobalConstants.TempDataErrorMessageKey]
                </h1>
            }

            @RenderBody()
        </main>
    </div>

<footer class="border-top footer text-muted" style="background-color: #38003c">
    <div class="container">
    </div>
</footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
